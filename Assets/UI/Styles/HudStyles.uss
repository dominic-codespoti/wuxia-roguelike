.minimap-container {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 200px;
    height: 200px;
    background-color: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    border-radius: 5px;
    border-width: 2px;
}

.player-marker {
    position: absolute;
    width: 8px;
    height: 8px;
    background-color: yellow;
    border-radius: 50%;
    border-width: 1px;
    border-color: black;
}